<!--Adapted from: https://github.com/Farama-Foundation/Gymnasium/blob/main/gymnasium/envs/mujoco/assets/ant.xml-->

<mujoco model="ant">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>

  <option integrator="RK4" timestep="0.01"/>

  <default>
    <joint armature="1" damping="1" limited="true"/>
    <geom condim="3" density="5.0" friction="1 0.5 0.5" margin="0.01" material="yellow"/>
  </default>

  <asset>
    <material name="team" rgba="0.4 0.4 0.4 1"/>
    <material name="yellow" rgba="0.8 0.6 0.4 1"/>
  </asset>

  <worldbody>
    <body name="torso" pos="0 0 0">
      <site name="torso" pos="0 0 0"/>
      <site name="torso-vismarker" pos="0 0 0"/>
      <site name="camera" pos="0.2 0 0.1"/>
      <camera name="track" mode="trackcom" pos="0 -3 0.3" xyaxes="1 0 0 0 0 1"/>
      <geom name="torso_geom" pos="0 0 0" size="0.25" type="sphere" material="team"/>
      <joint armature="0" damping="0" limited="false" margin="0.01" name="root" pos="0 0 0" type="free"/>
      <body name="front_left_leg" pos="0 0 0">
        <geom fromto="0.0 0.0 0.0 0.2 0.2 0.0" name="aux_1_geom" size="0.08" type="capsule"/>
        <body name="aux_1" pos="0.2 0.2 0">
          <joint axis="0 0 1" name="hip_1" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom fromto="0.0 0.0 0.0 0.2 0.2 0.0" name="left_leg_geom" size="0.08" type="capsule"/>
          <body pos="0.2 0.2 0">
            <joint axis="-1 1 0" name="ankle_1" pos="0.0 0.0 0.0" range="30 70" type="hinge"/>
            <geom fromto="0.0 0.0 0.0 0.4 0.4 0.0" name="left_ankle_geom" size="0.08" type="capsule"/>
          </body>
        </body>
      </body>
      <body name="front_right_leg" pos="0 0 0">
        <geom fromto="0.0 0.0 0.0 -0.2 0.2 0.0" name="aux_2_geom" size="0.08" type="capsule"/>
        <body name="aux_2" pos="-0.2 0.2 0">
          <joint axis="0 0 1" name="hip_2" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom fromto="0.0 0.0 0.0 -0.2 0.2 0.0" name="right_leg_geom" size="0.08" type="capsule"/>
          <body pos="-0.2 0.2 0">
            <joint axis="1 1 0" name="ankle_2" pos="0.0 0.0 0.0" range="-70 -30" type="hinge"/>
            <geom fromto="0.0 0.0 0.0 -0.4 0.4 0.0" name="right_ankle_geom" size="0.08" type="capsule"/>
          </body>
        </body>
      </body>
      <body name="back_leg" pos="0 0 0">
        <geom fromto="0.0 0.0 0.0 -0.2 -0.2 0.0" name="aux_3_geom" size="0.08" type="capsule"/>
        <body name="aux_3" pos="-0.2 -0.2 0">
          <joint axis="0 0 1" name="hip_3" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom fromto="0.0 0.0 0.0 -0.2 -0.2 0.0" name="back_leg_geom" size="0.08" type="capsule"/>
          <body pos="-0.2 -0.2 0">
            <joint axis="-1 1 0" name="ankle_3" pos="0.0 0.0 0.0" range="-70 -30" type="hinge"/>
            <geom fromto="0.0 0.0 0.0 -0.4 -0.4 0.0" name="third_ankle_geom" size="0.08" type="capsule"/>
          </body>
        </body>
      </body>
      <body name="right_back_leg" pos="0 0 0">
        <geom fromto="0.0 0.0 0.0 0.2 -0.2 0.0" name="aux_4_geom" size="0.08" type="capsule"/>
        <body name="aux_4" pos="0.2 -0.2 0">
          <joint axis="0 0 1" name="hip_4" pos="0.0 0.0 0.0" range="-30 30" type="hinge"/>
          <geom fromto="0.0 0.0 0.0 0.2 -0.2 0.0" name="rightback_leg_geom" size="0.08" type="capsule"/>
          <body pos="0.2 -0.2 0">
            <joint axis="1 1 0" name="ankle_4" pos="0.0 0.0 0.0" range="30 70" type="hinge"/>
            <geom fromto="0.0 0.0 0.0 0.4 -0.4 0.0" name="fourth_ankle_geom" size="0.08" type="capsule"/>
          </body>
        </body>
      </body>
    </body>
  </worldbody>

  <actuator>
    <motor name="l4e1_tau" joint="hip_4" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l4e1_pos" joint="hip_4" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l4e1_vel" joint="hip_4" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l4e2_tau" joint="ankle_4" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l4e2_pos" joint="ankle_4" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l4e2_vel" joint="ankle_4" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l1e1_tau" joint="hip_1" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l1e1_pos" joint="hip_1" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l1e1_vel" joint="hip_1" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l1e2_tau" joint="ankle_1" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l1e2_pos" joint="ankle_1" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l1e2_vel" joint="ankle_1" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l2e1_tau" joint="hip_2" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l2e1_pos" joint="hip_2" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l2e1_vel" joint="hip_2" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l2e2_tau" joint="ankle_2" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l2e2_pos" joint="ankle_2" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l2e2_vel" joint="ankle_2" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l3e1_tau" joint="hip_3" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l3e1_pos" joint="hip_3" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l3e1_vel" joint="hip_3" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>

    <motor name="l3e2_tau" joint="ankle_3" gear="150" ctrllimited="true" ctrlrange="-1.0 1.0"/>
    <position name="l3e2_pos" joint="ankle_3" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
    <velocity name="l3e2_vel" joint="ankle_3" gear="150" forcelimited="true" forcerange="-1.0 1.0"/>
  </actuator>

  <sensor>
    <framequat name="torso_quat" objtype="site" objname="torso"/><!-- Used for ground-truth perception of robot orientation.-->
    <framepos name="torso_pos" objtype="site" objname="torso"/><!-- Used for ground-truth perception of robot position.-->

    <gyro name="torso_gyro" site="torso"/>
    <accelerometer name="torso_acc" site="torso"/>
    <jointpos name="q_l4j1" joint="hip_4"/>
    <jointpos name="q_l4j2" joint="ankle_4"/>
    <jointpos name="q_l1j1" joint="hip_1"/>
    <jointpos name="q_l1j2" joint="ankle_1"/>
    <jointpos name="q_l2j1" joint="hip_2"/>
    <jointpos name="q_l2j2" joint="ankle_2"/>
    <jointpos name="q_l3j1" joint="hip_3"/>
    <jointpos name="q_l3j2" joint="ankle_3"/>
    <jointvel name="dq_l4j1" joint="hip_4"/>
    <jointvel name="dq_l4j2" joint="ankle_4"/>
    <jointvel name="dq_l1j1" joint="hip_1"/>
    <jointvel name="dq_l1j2" joint="ankle_1"/>
    <jointvel name="dq_l2j1" joint="hip_2"/>
    <jointvel name="dq_l2j2" joint="ankle_2"/>
    <jointvel name="dq_l3j1" joint="hip_3"/>
    <jointvel name="dq_l3j2" joint="ankle_3"/>
  </sensor>
</mujoco>